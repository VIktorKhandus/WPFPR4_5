<Page x:Class="WpfPR4_5.Pages.UpdatePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPR4_5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdatePasswordPage">

    <Grid Background="White">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Смена пароля" Margin="0,5,0,20" FontSize="30"
HorizontalAlignment="Center"/>
            <Label Grid.Row="1" Content="При первой авторизации необходимо сменить пароль"
Margin="0,5,0,30" FontSize="15" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="2" Text="Введите новый пароль:" TextAlignment="Center"/>
            <PasswordBox Grid.Row="3" x:Name="PasswordBox1" Margin="0,5,0,15" FontSize="16"
VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <TextBlock Grid.Row="4" Text="Подтверждение пароля:" TextAlignment="Center"/>
            <PasswordBox Grid.Row="5" x:Name="PasswordBox2" Margin="0,5,0,15" FontSize="16"
VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button Grid.Row="6" Content="Изменить пароль" Width="150" Margin="0,5,0,10" Height="31"
VerticalAlignment="Bottom" Click="UpdateButton_Click"/>
        </Grid>
    </Grid>
</Page>
