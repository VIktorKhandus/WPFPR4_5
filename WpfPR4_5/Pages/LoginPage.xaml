<Page x:Class="WpfPR4_5.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPR4_5.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinHeight="450" MinWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Авторизация" Margin="0,5,0,70" FontSize="30"
HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Text="Логин:" TextAlignment="Center"/>
            <TextBox Grid.Row="2" x:Name="LoginTextBox" Margin="0,5,0,15" FontSize="16"
TextAlignment="Center"/>
            <TextBlock Grid.Row="3" Text="Пароль:" TextAlignment="Center"/>
            <PasswordBox Grid.Row="4" x:Name="PasswordBox" Margin="0,5,0,15" FontSize="16"
VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button Grid.Row="5" Content="Войти" Width="150" Margin="0,5,0,5" Height="31"
VerticalAlignment="Bottom" Click="LoginButton_Click"/>
        </Grid>
    </Grid>
</Page>
